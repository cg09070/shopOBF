<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Overcoming By Faith Store{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>obf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            <script src="https://kit.fontawesome.com/ec4aadc64d.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div>
            <div id="header_div">
                <header class="row align-items-center" style="margin:auto;">
                    <div class="col-md-2">
                        <a class="link-underline link-underline-opacity-0" href="{{ path('homepage') }}">
                            <img  style="height:75px;" src="{{ asset('images/shop-logo.webp') }}" alt="shop logo">
                        </a>
                    </div>
                    <div class="col-md-5 text-center">
                        <nav id="headerLinks" class="fw-bold">
                            {% for headerLink in headerLinks %}
                                <a class="link-offset-2-hover link-underline-dark link-underline-opacity-0 link-underline-opacity-75-hover px-3" href="{{ headerLink.path }}">
                                    {{ headerLink.name|upper }}
                                </a>
                            {% endfor %}
                        </nav>
                    </div>
                    <div class="col-md-2">
                        <div class="buttonLinks">
                            <a href="{{ path('search') }}" style="padding-right:20px;"><i class="fa-solid fa-magnifying-glass"></i></a>
                            <a href="{{ path('cart') }}"><i class="fa-solid fa-cart-shopping"></i></a>
                        </div>
                    </div>
                </header>
            </div>
            <div>
                {% block body %}
                    {{ include("main/_banner.html.twig") }}
                    {{ include("main/_content.html.twig") }}
                    {{ include("main/_featured.html.twig") }}
                {% endblock %}
            </div>
            <div id="footer_div">
                <footer>
                    <h4>Overcoming By Faith Ministries</h4>
                    <nav id="footerLinks">
                        {% for footerLink in footerLinks %}
                            <a class="link-offset-2-hover link-underline-dark link-underline-opacity-0 link-underline-opacity-75-hover pe-4" href="{{ footerLink.path }}">
                                {{ footerLink.name }}
                            </a>
                        {% endfor %}
                    </nav>
                    <nav class="buttonLinks">
                        {% for socialLink in socialLinks %}
                            <a class="link-underline-dark link-underline-opacity-0" href="{{ socialLink.path }}">
                                <i class="fa-brands fa-{{ socialLink.name }}"></i>
                            </a>
                        {% endfor %}
                    </nav>
                </footer>
            </div>
        </div>
    </body>
</html>
